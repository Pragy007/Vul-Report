    <script>
        function downloadPDF() {
            // Use window.print() directly
            window.print();
        }
        
        function copyReport() {
            // Copy just the text content for easy pasting
            const container = document.querySelector('.container');
            const textContent = container.innerText;
            
            navigator.clipboard.writeText(textContent).then(() => {
                alert('Report text copied! Paste into Word/Google Docs and save as PDF');
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = textContent;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                alert('Report text copied! Paste into Word/Google Docs and save as PDF');
            });
        }
        
        function saveAsHTML() {
            const reportContent = document.documentElement.outerHTML;
            const blob = new Blob([reportContent], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'security-report-him-shakti.html';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            alert('HTML file saved! Open it and use Ctrl+P to print as PDF');
        }
    </script>
    
